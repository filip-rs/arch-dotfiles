#       ░░▒▒▓▓   ▓▓ YPRLAND config


# Setup monitors
# See https://wiki.hyprland.org/Configuring/Monitors/
monitor=,preferred,1920x1080,1.25



# See https://wiki.hyprland.org/Configuring/Keywords/ for more

# █░░ ▄▀█ █░█ █▄░█ █▀▀ █░█
# █▄▄ █▀█ █▄█ █░▀█ █▄▄ █▀█

# Execute your favorite apps at launch
#   exec-once = ~/.config/hypr/xdg-portal-hyprland
#   exec-once = dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP
#   exec-once = systemctl --user import-environment WAYLAND_DISPLAY XDG_CURRENT_DESKTOP
exec-once = /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec-once = waybar
# old wallpaper exec = swaybg -m fill -i ~/.config/hypr/hong-kong-night.jpg
exec-once = oguri
exec-once = dwall -s aurora
exec-once = blueman-applet # systray app for BT
exec-once = nm-applet --indicator # systray app for Network/Wifi
exec-once = kwalletd6
exec-once = hyprctl dispatch workspace 2
exec-once = sudo modprobe cp210x
exec-once = hyprpm reload -n


# unscale XWayland
xwayland {
  force_zero_scaling = true
}

# toolkit-specific scale
env = GDK_SCALE,2
env = XCURSOR_SIZE, 21




# █ █▄░█ █▀█ █░█ ▀█▀
# █ █░▀█ █▀▀ █▄█ ░█░

# For all categories, see https://wiki.hyprland.org/Configuring/Variables/
input {
    kb_layout = no
    kb_variant = winkeys
    kb_model =
    kb_options =
    kb_rules =

    follow_mouse = 1

    touchpad {
        natural_scroll = yes
	disable_while_typing = no
    }
    accel_profile = flat
    sensitivity = 0.5 # -1.0 - 1.0, 0 means no modification.
}

general {
    # See https://wiki.hyprland.org/Configuring/Variables/ for more

    gaps_in = 2
    gaps_out = 5
    border_size = 1
    #border_size = 0
    col.active_border = rgba(ffffffee) rgba(eeeeee44) 45deg
    # col.active_border=rgba(cdd6f4cc)
    col.inactive_border = rgba(595959aa)

    layout = dwindle
}

misc {
    disable_hyprland_logo = yes
    animate_manual_resizes = true
}

decoration {
    # See https://wiki.hyprland.org/Configuring/Variables/ for more

    rounding = 10
    
    blur { 
        # enabled = true
        # size = 3
        # passes = 5
	# layerrule = blur,Discord
	enabled = true
	size = 5
	passes = 3
	new_optimizations = yes
	ignore_opacity=true
    }
    
    #blur_new_optimizations = on

    #drop_shadow = yes
    drop_shadow = no
    shadow_range = 4
    shadow_render_power = 3
    col.shadow = rgba(1a1a1aee)
    

    #layerrule = blur,waybar
    #layerrule = blur,wofi
}


dwindle {
    # See https://wiki.hyprland.org/Configuring/Dwindle-Layout/ for more
    pseudotile = yes # master switch for pseudotiling. Enabling is bound to mainMod + P in the keybinds section below
    preserve_split = yes # you probably want this
}

master {
    # See https://wiki.hyprland.org/Configuring/Master-Layout/ for more
    #new_is_master = true
}

gestures {
    # See https://wiki.hyprland.org/Configuring/Variables/ for more
    workspace_swipe = on
    workspace_swipe_forever = true
    # workspace_swipe_numbered = true
}

# Example per-device config
# See https://wiki.hyprland.org/Configuring/Keywords/#executing for more

opengl {
    force_introspection = 1
}



